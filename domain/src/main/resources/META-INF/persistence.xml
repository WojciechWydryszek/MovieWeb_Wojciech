<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd" version="2.1">
    <persistence-unit name="movieweb_mysql" transaction-type="RESOURCE_LOCAL">
        <description> Hibernate JPA videogame-namagement configuration</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!--<class>cat.uvic.teknos.m06.MovieWeb.domain.models.Actor</class>
        <class>cat.uvic.teknos.m06.MovieWeb.domain.models.MainCharacter</class>-->
        <class>cat.uvic.teknos.m06.MovieWeb.domain.models.Genre</class>
        <class>cat.uvic.teknos.m06.MovieWeb.domain.models.Film</class>

        <properties>
            <!--<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver" />-->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/movieweb_jpa" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect" />
            <property name="hibernate.show_sql" value="true" /> <!-- Give possibiliti for sie console commands -->
            <property name="hibernate.hbm2ddl.auto" value="create" /> <!-- Delete all and turn another time all commands -->

            <property name="javax.persistence.sql-load-script-source" value="data.sql" />
        </properties>
    </persistence-unit>
</persistence>


